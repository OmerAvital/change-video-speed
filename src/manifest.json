{
  "name": "Change Video Speed",
  "description": "Change the speed of any video.",
  "version": "1.4",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "scripting",
    "background",
    "webNavigation",
    "storage"
  ],
  "host_permissions": [ "<all_urls>" ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/icon/icon_16.png",
      "32": "/icon/icon_32.png",
      "48": "/icon/icon_48.png",
      "128": "/icon/icon_128.png"
    }
  },
  "icons": {
    "16": "/icon/icon_16.png",
    "32": "/icon/icon_32.png",
    "48": "/icon/icon_48.png",
    "128": "/icon/icon_128.png"
  }
}
